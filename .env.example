# --- Search & Extraction APIs ---
PERPLEXITY_API_KEY=your_perplexity_key
TAVILY_API_KEY=your_tavily_key
LLAMA_CLOUD_API_KEY=your_llama_cloud_key
GOOGLE_API_KEY=your_google_ai_studio_key

# --- Database ---
# Local SQLite: sqlite+aiosqlite:///./test.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./test.db

# --- Temporal (Production/Cloud) ---
TEMPORAL_ADDRESS=your_temporal_address:7233
TEMPORAL_NAMESPACE=your_namespace
TEMPORAL_API_KEY=your_api_key

# --- Research Control Parameters ---
# Number of loops the orchestrator runs before stopping automatically
MAX_ITERATIONS=5
# Total pages a single worker is allowed to fetch in one run
WORKER_PAGE_BUDGET=50
# Percentage of the total tokens/budget to reserve for the adaptive phase
BUDGET_RESERVE_PCT=0.6

# --- LLM Settings ---
# The model used for planning and reasoning
RESEARCH_MODEL=gemini-3-flash-preview
# Timeout for LLM requests in seconds
RESEARCH_TIMEOUT=60
